<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserDetailsActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vert_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/user_info_header_txt"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        android:gravity="center"
        android:text="User Information"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_name_label_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:text="UserName:"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_info_header_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guide_vert_1" />

    <TextView
        android:id="@+id/user_name_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_info_header_txt"
        app:layout_constraintStart_toStartOf="@+id/guide_vert_1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_designation_label_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:text="Designation:"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_name_label_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guide_vert_1" />

    <TextView
        android:id="@+id/user_designation_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_name_txt"
        app:layout_constraintStart_toStartOf="@+id/guide_vert_1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_company_label_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:text="Company:"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_designation_label_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guide_vert_1" />

    <TextView
        android:id="@+id/user_company_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_designation_label_txt"
        app:layout_constraintStart_toStartOf="@+id/guide_vert_1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_mobile_no_label_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:text="Mobile No:"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_company_label_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guide_vert_1" />

    <TextView
        android:id="@+id/user_mobile_no_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_company_label_txt"
        app:layout_constraintStart_toStartOf="@+id/guide_vert_1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/user_status_label_txt"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:text="is Active:"
        android:textColor="@color/black"
        android:gravity="end|center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_mobile_no_label_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/guide_vert_1" />

    <CheckBox
        android:id="@+id/user_status_check"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/user_mobile_no_label_txt"
        app:layout_constraintStart_toStartOf="@+id/guide_vert_1"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>